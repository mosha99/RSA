@using RSA.Service
<RadzenCard Style="margin: var(--rz-form-field-margin);">
    <RadzenFieldset AllowCollapse="true" Collapsed="true" Text="Show Key Part">
        <RadzenStack class="w-100">
            <RadzenRow class="w-100" AlignItems="AlignItems.Center">
                <RadzenText>Public Key : @(GeneratedKeys?.PublicKey)</RadzenText>
            </RadzenRow>
            <RadzenRow class="w-100" AlignItems="AlignItems.Center">
                <RadzenText>Share Key : @(GeneratedKeys?.SharedKey)</RadzenText>
            </RadzenRow>
            <RadzenRow class="w-100" AlignItems="AlignItems.Center">
                <RadzenText>Private Key : @(GeneratedKeys?.PrivateKey)</RadzenText>
            </RadzenRow>
        </RadzenStack>
    </RadzenFieldset>
</RadzenCard>

@code {
    [Parameter] public GeneratedKeys? GeneratedKeys { set; get; }
}
